<div class="row">
    <div class="col-2">
        {% block content %}
        {% if site_logo %}
        <p class="site-logo"> <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">
                <img src="{{ site_logo }}" alt="{{ 'Home'|t }}" />
            </a> </p>
        {% endif %}
    </div>
    <div class="col-10 site-name-slogan">
        {% if site_name %}
        <p class="site-name"> <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">{{ site_name }}</a> </p>
        {% endif %}
        {% if site_slogan %}
            <p class="site-slogan"> {{ site_slogan }}</p>
        {% endif %}
    </div>
    {% endblock %}
</div>